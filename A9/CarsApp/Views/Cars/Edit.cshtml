@{
}

@model CarsApp.Web.Models.Entities.Car

<h1>Edit the car:</h1>

@if (Model is null)
{
    <p>No car was found. </p>
}
@if (Model is not null)
{

<form method="post">

    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-label">Model</label>
        <input type="text" class="form-control" asp-for="Model" />
    </div>

    <div class="mt-3">
        <label class="form-label">Engine Power</label>
        <input type="text" class="form-control" asp-for="EnginePower" />
    </div>

    <div class="mt-3">
        <label class="form-label">Fuel</label>
        <input type="text" class="form-control" asp-for="Fuel" />
    </div>

    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>

    <div class="mt-3">
        <label class="form-label">Color</label>
        <input type="text" class="form-control" asp-for="Color" />
    </div>

    <div class="mt-3">
        <label class="form-label">Age</label>
        <input type="text" class="form-control" asp-for="Age" />
    </div>

    <div class="mt-3">
        <label class="form-label">History</label>
        <input type="text" class="form-control" asp-for="History" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Cars">Delete</button>
    </div>

</form>

}
